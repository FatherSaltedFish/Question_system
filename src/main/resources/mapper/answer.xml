<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.repository.answerMapper">
    <resultMap id="BaseResultMap" type="com.example.demo.model.answer">
        <constructor>
            <arg column="id" javaType="java.lang.Integer" jdbcType="INTEGER" />
            <arg column="content" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="question_id" javaType="java.lang.Integer" jdbcType="INTEGER" />
        </constructor>
    </resultMap>
    <sql id="Base_Column_List">
    id,content,question_id
    </sql>

    <select id="selectByquestion_id" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from answer
        where question_id = #{question_id}
    </select>

    <select id="selectByAll"  resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from answer
    </select>

    <delete id="deleteByquestion_id" parameterType="java.lang.Integer">
        delete from answer
        where question_id=#{question_id}
    </delete>

    <insert id="addanswer" parameterType="com.example.demo.model.answer" keyProperty="id" useGeneratedKeys="true">
        insert into answer(content,question_id) values(#{content},#{question_id})
    </insert>

</mapper>